{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "3.10.4",
    "tasks": [
        {
            "label": "Python Run",
            "type": "shell",
            "command": "python",
            "args": [
                "${file}"
            ],
            "options": {
                "env": {
                    "PYTHONIOENCODING": "UTF-8",
                    "PYTHONPATH": "${workspaceFolder}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true               
            }
        }
    ]
}